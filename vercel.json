{
  "version": 2,
  "builds": [
    {"src": "server/src/index.js", "use": "@vercel/node"},
    {"src": "client/package.json", "use": "@vercel/static-build", "config": {"distDir": "dist"}}
  ],
  "routes": [
    {"src": "/api/(.*)", "dest": "/server/src/index.js"},
    {"src": "/uploads/(.*)", "dest": "/server/uploads/$1"},
    {"src": "/(.*)", "dest": "/client/$1"}
  ],
  "env": {"NODE_ENV": "production"},
  "functions": {"server/src/index.js": {"maxDuration": 10}}
}